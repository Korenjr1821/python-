notebook = {}

def add_note():
    global notebook
    title = input("Header: ")
    text = input("Text: ")
    notebook[title] = text
    print("Note added.")

def read_notes():
    global notebook
    if not notebook:
        print("Заметок нет.")
        return
    print(", ".join(notebook.keys()))
    title = input("Which note to read? ")
    if title in notebook:
        print(notebook[title])
    else:
        print("Такой заметки нет.")

def delete_note():
    global notebook
    if not notebook:
        print("Заметок нет.")
        return
    print(", ".join(notebook.keys()))
    title = input("Which note to delete? ")
    if title in notebook:
        notebook.pop(title)
        print(f"Note {title} removed.")
    else:
        print("Такой заметки нет.")

def menu():
    while True:
        print("[1] - Create a new note.")
        print("[2] - Read all notes.")
        print("[3] - Delete entry.")
        print("[4] - Exit.")
        choice = input("> ")
        if choice == '1':
            add_note()
        elif choice == '2':
            read_notes()
        elif choice == '3':
            delete_note()
        elif choice == '4':
            print("Exiting program.")
            break
        else:
            print("Некорректный выбор, попробуйте снова.")
